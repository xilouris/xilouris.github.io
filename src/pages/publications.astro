---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile } from '../data/profile';
import { publications, scholarStats } from '../data/publications-auto';

// Sort publications by year (newest first) and citations
const sortedPublications = [...publications].sort((a, b) => {
  if (b.year !== a.year) return b.year - a.year;
  return b.citations - a.citations;
});

// Get unique years for filtering
const years = [...new Set(sortedPublications.map(p => p.year))].sort((a, b) => b - a);

// Use statistics from Google Scholar
const totalPublications = scholarStats.totalPublications;
const totalCitations = scholarStats.totalCitations;
const hIndex = scholarStats.hIndex;
const i10Index = scholarStats.i10Index;
const journalPapers = sortedPublications.filter(p => p.type === 'journal').length;
const conferencePapers = sortedPublications.filter(p => p.type === 'conference').length;
const bookChapters = sortedPublications.filter(p => p.type === 'book').length;
---

<BaseLayout title="Publications">
  <!-- Publications Header -->
  <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 py-16 border-b border-secondary-200">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold text-secondary-900 mb-6 text-center">
        Publications
      </h1>
      <p class="text-lg text-secondary-700 text-center max-w-3xl mx-auto mb-8">
        Research publications in network architectures, cybersecurity, and telecommunications.
        For a complete and up-to-date list, please visit my
        <a
          href={profile.socialLinks.googleScholar}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-700 font-medium"
        >
          Google Scholar profile
        </a>.
      </p>

      <!-- Statistics -->
      <div class="space-y-4 max-w-5xl mx-auto">
        <!-- Top row: Main metrics -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
            <div class="text-3xl font-bold text-primary-700 mb-2">{totalPublications}</div>
            <div class="text-sm text-secondary-600">Total Papers</div>
          </div>
          <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
            <div class="text-3xl font-bold text-accent-700 mb-2">{totalCitations}</div>
            <div class="text-sm text-secondary-600">Citations</div>
          </div>
          <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
            <div class="text-3xl font-bold text-primary-700 mb-2">{hIndex}</div>
            <div class="text-sm text-secondary-600">h-index</div>
          </div>
          <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
            <div class="text-3xl font-bold text-accent-700 mb-2">{i10Index}</div>
            <div class="text-sm text-secondary-600">i10-index</div>
          </div>
        </div>
        <!-- Bottom row: Publication types -->
        <div class="grid grid-cols-3 gap-4">
          <div class="bg-white rounded-lg p-4 text-center shadow-sm border border-secondary-200">
            <div class="text-2xl font-bold text-primary-600 mb-1">{journalPapers}</div>
            <div class="text-xs text-secondary-600">Journal Papers</div>
          </div>
          <div class="bg-white rounded-lg p-4 text-center shadow-sm border border-secondary-200">
            <div class="text-2xl font-bold text-accent-600 mb-1">{conferencePapers}</div>
            <div class="text-xs text-secondary-600">Conference Papers</div>
          </div>
          <div class="bg-white rounded-lg p-4 text-center shadow-sm border border-secondary-200">
            <div class="text-2xl font-bold text-secondary-600 mb-1">{bookChapters}</div>
            <div class="text-xs text-secondary-600">Book Chapters</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl py-16">
    <!-- Filters -->
    <div class="mb-12 space-y-6">
      <!-- Search Bar -->
      <div class="relative">
        <input
          type="text"
          id="search-input"
          placeholder="Search publications by title, authors, or keywords..."
          class="w-full px-6 py-4 pl-12 rounded-lg border border-secondary-300 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent text-base"
        />
        <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>

      <!-- Filter Buttons -->
      <div class="flex flex-wrap gap-3">
        <button
          data-filter="all"
          class="filter-btn active px-6 py-2 rounded-full font-medium transition-all"
        >
          All ({totalPublications})
        </button>
        <button
          data-filter="journal"
          class="filter-btn px-6 py-2 rounded-full font-medium transition-all"
        >
          Journals ({journalPapers})
        </button>
        <button
          data-filter="conference"
          class="filter-btn px-6 py-2 rounded-full font-medium transition-all"
        >
          Conferences ({conferencePapers})
        </button>
        <button
          data-filter="book"
          class="filter-btn px-6 py-2 rounded-full font-medium transition-all"
        >
          Book Chapters ({bookChapters})
        </button>

        <!-- Year Filter Dropdown -->
        <select
          id="year-filter"
          class="px-6 py-2 rounded-full border border-secondary-300 font-medium bg-white hover:bg-secondary-50 transition-all focus:outline-none focus:ring-2 focus:ring-primary-500"
        >
          <option value="all">All Years</option>
          {years.map(year => (
            <option value={year}>{year}</option>
          ))}
        </select>
      </div>
    </div>

    <!-- Publications List -->
    <div id="publications-list" class="space-y-6">
      {sortedPublications.map((pub) => (
        <article
          class="publication-item bg-white rounded-lg p-6 shadow-sm border border-secondary-200 hover:shadow-md transition-shadow"
          data-type={pub.type}
          data-year={pub.year}
          data-search-text={`${pub.title} ${pub.authors} ${pub.venue}`.toLowerCase()}
        >
          <div class="flex flex-wrap gap-3 mb-3">
            <span class={`px-3 py-1 rounded-full text-xs font-semibold ${
              pub.type === 'journal' ? 'bg-primary-100 text-primary-800' :
              pub.type === 'conference' ? 'bg-accent-100 text-accent-800' :
              'bg-secondary-100 text-secondary-800'
            }`}>
              {pub.type === 'journal' ? 'Journal' : pub.type === 'conference' ? 'Conference' : 'Book Chapter'}
            </span>
            <span class="px-3 py-1 rounded-full text-xs font-semibold bg-secondary-100 text-secondary-700">
              {pub.year}
            </span>
            <span class="px-3 py-1 rounded-full text-xs font-semibold bg-primary-50 text-primary-700 flex items-center gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              {pub.citations} citations
            </span>
          </div>

          <h3 class="text-xl font-bold text-secondary-900 mb-2">
            {pub.title}
          </h3>

          <p class="text-sm text-secondary-700 mb-2">
            {pub.authors}
          </p>

          <p class="text-sm font-medium text-primary-700 mb-3">
            {pub.venue}
          </p>

          {pub.abstract && (
            <p class="text-sm text-secondary-600 leading-relaxed mb-4">
              {pub.abstract}
            </p>
          )}

          {pub.url && (
            <a
              href={pub.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              View Publication
            </a>
          )}
        </article>
      ))}
    </div>

    <!-- No Results Message -->
    <div id="no-results" class="hidden text-center py-16">
      <svg class="w-16 h-16 mx-auto text-secondary-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p class="text-lg text-secondary-600">No publications found matching your filters.</p>
      <button
        id="reset-filters"
        class="mt-4 text-primary-600 hover:text-primary-700 font-medium"
      >
        Reset Filters
      </button>
    </div>

    <!-- Note -->
    <div class="bg-primary-50 border border-primary-200 rounded-lg p-6 text-center mt-12">
      <p class="text-sm text-secondary-700">
        This page shows selected publications. The complete list with real-time citation counts
        will be automatically updated from Google Scholar. Visit my
        <a
          href={profile.socialLinks.googleScholar}
          target="_blank"
          rel="noopener noreferrer"
          class="text-primary-600 hover:text-primary-700 font-medium"
        >
          Google Scholar profile
        </a>
        for the most up-to-date information.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .filter-btn {
    @apply bg-white border border-secondary-300 text-secondary-700;
  }

  .filter-btn:hover {
    @apply bg-secondary-50 border-secondary-400;
  }

  .filter-btn.active {
    @apply bg-primary-600 text-white border-primary-600;
  }

  .publication-item.hidden {
    display: none;
  }
</style>

<script>
  // Filter functionality
  const filterButtons = document.querySelectorAll('.filter-btn');
  const yearFilter = document.getElementById('year-filter') as HTMLSelectElement;
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const publicationItems = document.querySelectorAll('.publication-item');
  const noResults = document.getElementById('no-results');
  const resetButton = document.getElementById('reset-filters');

  let currentTypeFilter = 'all';
  let currentYearFilter = 'all';
  let currentSearchTerm = '';

  function filterPublications() {
    let visibleCount = 0;

    publicationItems.forEach((item) => {
      const element = item as HTMLElement;
      const type = element.dataset.type;
      const year = element.dataset.year;
      const searchText = element.dataset.searchText || '';

      const typeMatch = currentTypeFilter === 'all' || type === currentTypeFilter;
      const yearMatch = currentYearFilter === 'all' || year === currentYearFilter;
      const searchMatch = searchText.includes(currentSearchTerm.toLowerCase());

      if (typeMatch && yearMatch && searchMatch) {
        element.classList.remove('hidden');
        visibleCount++;
      } else {
        element.classList.add('hidden');
      }
    });

    // Show/hide no results message
    if (noResults) {
      if (visibleCount === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }
  }

  // Type filter buttons
  filterButtons.forEach((button) => {
    button.addEventListener('click', () => {
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      currentTypeFilter = (button as HTMLElement).dataset.filter || 'all';
      filterPublications();
    });
  });

  // Year filter
  if (yearFilter) {
    yearFilter.addEventListener('change', () => {
      currentYearFilter = yearFilter.value;
      filterPublications();
    });
  }

  // Search input
  if (searchInput) {
    searchInput.addEventListener('input', () => {
      currentSearchTerm = searchInput.value;
      filterPublications();
    });
  }

  // Reset filters
  if (resetButton) {
    resetButton.addEventListener('click', () => {
      currentTypeFilter = 'all';
      currentYearFilter = 'all';
      currentSearchTerm = '';

      filterButtons.forEach(btn => btn.classList.remove('active'));
      const allButton = document.querySelector('[data-filter="all"]');
      if (allButton) allButton.classList.add('active');

      if (yearFilter) yearFilter.value = 'all';
      if (searchInput) searchInput.value = '';

      filterPublications();
    });
  }
</script>

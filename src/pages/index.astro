---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile } from '../data/profile';
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 py-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-center">
        <!-- Profile Image -->
        <div class="md:col-span-1 flex justify-center">
          <div class="relative">
            <div class="w-64 h-64 rounded-full overflow-hidden border-4 border-white shadow-2xl">
              <img
                src={profile.profileImage || '/images/profile-placeholder.jpg'}
                alt={profile.name}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 bg-gradient-to-br from-primary-600 to-accent-500 text-white px-6 py-3 rounded-full shadow-lg">
              <span class="text-sm font-semibold">Researcher</span>
            </div>
          </div>
        </div>

        <!-- Hero Content -->
        <div class="md:col-span-2 space-y-6">
          <div>
            <h1 class="text-5xl md:text-6xl font-bold text-secondary-900 mb-4">
              {profile.name}
            </h1>
            <p class="text-2xl text-secondary-700 mb-6">
              {profile.title}
            </p>
            <p class="text-lg text-primary-700 font-medium">
              <a
                href={profile.affiliationUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-primary-800 no-underline"
              >
                {profile.affiliation}
              </a>
            </p>
            <p class="text-lg text-secondary-600">
              NCSR "Demokritos" | {profile.location}
            </p>
          </div>

          <p class="text-lg text-secondary-700 leading-relaxed">
            {profile.bio}
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a href="/publications" class="btn-primary no-underline">
              View Publications
            </a>
            <a href="/cv" class="btn-secondary no-underline">
              Download CV
            </a>
            {profile.socialLinks.googleScholar && (
              <a
                href={profile.socialLinks.googleScholar}
                target="_blank"
                rel="noopener noreferrer"
                class="btn-secondary no-underline"
              >
                Google Scholar
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Research Interests Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-secondary-900 mb-8 text-center">
        Research Interests
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        {profile.researchInterests.map((interest) => (
          <div class="bg-primary-50 border border-primary-200 rounded-lg p-4 text-center hover:bg-primary-100 transition-colors">
            <span class="text-sm font-medium text-primary-900">{interest}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Stats Section -->
  <section class="py-16 bg-secondary-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-lg p-8 shadow-md text-center border-t-4 border-primary-600">
          <div class="text-4xl font-bold text-primary-700 mb-2">--</div>
          <div class="text-secondary-600 font-medium">Publications</div>
          <div class="text-sm text-secondary-500 mt-1">Auto-updated from Scholar</div>
        </div>
        <div class="bg-white rounded-lg p-8 shadow-md text-center border-t-4 border-accent-500">
          <div class="text-4xl font-bold text-accent-700 mb-2">--</div>
          <div class="text-secondary-600 font-medium">Citations</div>
          <div class="text-sm text-secondary-500 mt-1">Google Scholar</div>
        </div>
        <div class="bg-white rounded-lg p-8 shadow-md text-center border-t-4 border-primary-600">
          <div class="text-4xl font-bold text-primary-700 mb-2">--</div>
          <div class="text-secondary-600 font-medium">Active Projects</div>
          <div class="text-sm text-secondary-500 mt-1">Research initiatives</div>
        </div>
      </div>
      <p class="text-center text-secondary-500 text-sm mt-8">
        Statistics will be automatically updated via Google Scholar integration
      </p>
    </div>
  </section>

  <!-- Recent Updates Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <h2 class="text-3xl font-bold text-secondary-900 mb-8 text-center">
        Recent Updates
      </h2>
      <div class="space-y-6">
        <div class="border-l-4 border-primary-600 pl-6 py-4">
          <div class="text-sm text-secondary-500 mb-2">Coming Soon</div>
          <h3 class="text-xl font-semibold text-secondary-900 mb-2">
            Latest Publications
          </h3>
          <p class="text-secondary-700">
            Recent publications will appear here, automatically synced from Google Scholar.
          </p>
        </div>
        <div class="border-l-4 border-accent-500 pl-6 py-4">
          <div class="text-sm text-secondary-500 mb-2">Coming Soon</div>
          <h3 class="text-xl font-semibold text-secondary-900 mb-2">
            Blog Posts
          </h3>
          <p class="text-secondary-700">
            Latest blog posts and research updates will be displayed here.
          </p>
        </div>
      </div>
      <div class="text-center mt-12">
        <a href="/blog" class="text-primary-600 hover:text-primary-700 font-medium no-underline">
          View all updates â†’
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

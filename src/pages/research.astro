---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile } from '../data/profile';
import { activeProjects, completedProjects, projectStats } from '../data/projects';
---

<BaseLayout title="Research Projects">
  <!-- Research Header -->
  <section class="bg-gradient-to-br from-primary-50 via-white to-accent-50 py-16 border-b border-secondary-200">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <h1 class="text-4xl md:text-5xl font-bold text-secondary-900 mb-6 text-center">
        Research Projects
      </h1>
      <p class="text-lg text-secondary-700 text-center max-w-3xl mx-auto mb-8">
        Leading research initiatives in next-generation networks, cybersecurity, and intelligent infrastructure.
        Coordinating multiple EU-funded projects advancing 5G/6G technologies, edge computing, and AI-driven network security.
      </p>

      <!-- Statistics -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
          <div class="text-3xl font-bold text-primary-700 mb-2">{projectStats.activeProjects}</div>
          <div class="text-sm text-secondary-600">Active Projects</div>
        </div>
        <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
          <div class="text-3xl font-bold text-accent-700 mb-2">{projectStats.completedProjects}</div>
          <div class="text-sm text-secondary-600">Completed</div>
        </div>
        <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
          <div class="text-3xl font-bold text-primary-700 mb-2">{projectStats.totalProjects}</div>
          <div class="text-sm text-secondary-600">Total Projects</div>
        </div>
        <div class="bg-white rounded-lg p-6 text-center shadow-sm border border-secondary-200">
          <div class="text-3xl font-bold text-accent-700 mb-2">EC</div>
          <div class="text-sm text-secondary-600">Funded Research</div>
        </div>
      </div>
    </div>
  </section>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl py-16">
    <!-- Active Projects Section -->
    <section class="mb-20">
      <div class="flex items-center mb-8">
        <div class="w-12 h-12 rounded-full bg-primary-100 flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-secondary-900">Active Projects</h2>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {activeProjects.map((project) => (
          <article class="bg-white rounded-lg border border-secondary-200 shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden group">
            {/* Project Header */}
            <div class="bg-gradient-to-r from-primary-600 to-accent-600 p-6 text-white">
              <div class="flex items-start justify-between mb-3">
                <div class="flex-1">
                  {project.acronym && (
                    <div class="inline-block bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm font-bold mb-2">
                      {project.acronym}
                    </div>
                  )}
                  <h3 class="text-xl font-bold leading-tight">{project.title}</h3>
                </div>
                <span class="ml-4 px-3 py-1 bg-green-500 text-white text-xs font-bold rounded-full whitespace-nowrap">
                  ACTIVE
                </span>
              </div>
              <div class="flex flex-wrap gap-3 text-sm">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  {project.startDate} - {project.endDate}
                </div>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  {project.role}
                </div>
              </div>
            </div>

            {/* Project Body */}
            <div class="p-6">
              <p class="text-secondary-700 mb-4 leading-relaxed">
                {project.description}
              </p>

              {/* Funding */}
              <div class="mb-4 pb-4 border-b border-secondary-200">
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium text-secondary-900">Funding:</span>
                  <span class="text-secondary-600">{project.funding}</span>
                  {project.fundingProgram && (
                    <span class="text-secondary-500">({project.fundingProgram})</span>
                  )}
                </div>
              </div>

              {/* Objectives */}
              {project.objectives && project.objectives.length > 0 && (
                <div class="mb-4">
                  <h4 class="text-sm font-bold text-secondary-900 mb-2">Key Objectives:</h4>
                  <ul class="space-y-1">
                    {project.objectives.map((objective) => (
                      <li class="text-sm text-secondary-600 flex items-start">
                        <span class="text-primary-600 mr-2">â–¸</span>
                        <span>{objective}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Technologies */}
              {project.technologies && project.technologies.length > 0 && (
                <div class="mb-4">
                  <h4 class="text-sm font-bold text-secondary-900 mb-2">Technologies:</h4>
                  <div class="flex flex-wrap gap-2">
                    {project.technologies.map((tech) => (
                      <span class="bg-primary-50 text-primary-800 px-3 py-1 rounded-full text-xs font-medium border border-primary-200">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              {/* Impact */}
              {project.impact && (
                <div class="mt-4 pt-4 border-t border-secondary-200">
                  <div class="flex items-start gap-2">
                    <svg class="w-5 h-5 text-accent-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    <p class="text-sm text-secondary-700 font-medium">{project.impact}</p>
                  </div>
                </div>
              )}

              {/* Website Link */}
              {project.website && (
                <div class="mt-4">
                  <a
                    href={project.website}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                    Project Website
                  </a>
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>

    <!-- Divider -->
    <div class="h-px bg-gradient-to-r from-transparent via-secondary-300 to-transparent mb-20"></div>

    <!-- Completed Projects Section -->
    <section>
      <div class="flex items-center mb-8">
        <div class="w-12 h-12 rounded-full bg-accent-100 flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-accent-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-secondary-900">Completed Projects</h2>
      </div>

      <div class="space-y-6">
        {completedProjects.map((project) => (
          <article class="bg-white rounded-lg border border-secondary-200 shadow-sm hover:shadow-md transition-shadow p-6">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-4 mb-4">
              <div class="flex-1">
                {project.acronym && (
                  <span class="inline-block bg-secondary-100 text-secondary-800 px-3 py-1 rounded-full text-xs font-bold mb-2">
                    {project.acronym}
                  </span>
                )}
                <h3 class="text-xl font-bold text-secondary-900 mb-2">{project.title}</h3>
                <div class="flex flex-wrap gap-3 text-sm text-secondary-600">
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {project.startDate} - {project.endDate}
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    {project.role}
                  </div>
                  <div class="flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {project.fundingProgram}
                  </div>
                </div>
              </div>
              <span class="px-3 py-1 bg-secondary-200 text-secondary-700 text-xs font-bold rounded-full h-fit whitespace-nowrap">
                COMPLETED
              </span>
            </div>

            <p class="text-secondary-700 mb-4">{project.description}</p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {/* Technologies */}
              {project.technologies && project.technologies.length > 0 && (
                <div>
                  <h4 class="text-xs font-bold text-secondary-900 mb-2 uppercase">Technologies</h4>
                  <div class="flex flex-wrap gap-1">
                    {project.technologies.map((tech) => (
                      <span class="bg-secondary-50 text-secondary-700 px-2 py-1 rounded text-xs">
                        {tech}
                      </span>
                    ))}
                  </div>
                </div>
              )}

              {/* Impact */}
              {project.impact && (
                <div>
                  <h4 class="text-xs font-bold text-secondary-900 mb-2 uppercase">Impact</h4>
                  <p class="text-sm text-secondary-700">{project.impact}</p>
                </div>
              )}
            </div>

            {project.website && (
              <div class="mt-4 pt-4 border-t border-secondary-200">
                <a
                  href={project.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm font-medium text-primary-600 hover:text-primary-700"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                  Project Website
                </a>
              </div>
            )}
          </article>
        ))}
      </div>
    </section>

    <!-- Research Areas Summary -->
    <div class="mt-20 bg-primary-50 border border-primary-200 rounded-lg p-8">
      <h3 class="text-2xl font-bold text-secondary-900 mb-4 text-center">Research Focus Areas</h3>
      <div class="flex flex-wrap justify-center gap-3">
        {projectStats.researchAreas.map((area) => (
          <span class="bg-white text-primary-800 px-4 py-2 rounded-lg text-sm font-medium border border-primary-200 shadow-sm">
            {area}
          </span>
        ))}
      </div>
      <p class="text-center text-secondary-600 mt-6 text-sm">
        Leading research initiatives funded by the European Commission (H2020, Horizon Europe)
        advancing next-generation network technologies and cybersecurity solutions.
      </p>
    </div>
  </div>
</BaseLayout>

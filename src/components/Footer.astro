---

<footer class="bg-secondary-900 text-secondary-100 mt-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About Section -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="text-white text-lg font-bold mb-4">
          {profile.name}
        </h3>
        <p class="text-secondary-400 text-sm mb-4">
          {profile.title}
        </p>
        <p class="text-secondary-400 text-sm">
          <a
            href={profile.affiliationUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-400 hover:text-primary-300 no-underline"
          >
            {profile.affiliation}
          </a>
        </p>
        <p class="text-secondary-400 text-sm mt-2">
          NCSR "Demokritos"
        </p>
      </div>

      <!-- Quick Links -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="text-white text-lg font-bold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/publications" class="text-secondary-400 hover:text-primary-400 text-sm no-underline">
              Publications
            </a>
          </li>
          <li>
            <a href="/research" class="text-secondary-400 hover:text-primary-400 text-sm no-underline">
              Research Projects
            </a>
          </li>
          <li>
            <a href="/cv" class="text-secondary-400 hover:text-primary-400 text-sm no-underline">
              Curriculum Vitae
            </a>
          </li>
          <li>
            <a href="/blog" class="text-secondary-400 hover:text-primary-400 text-sm no-underline">
              Blog
            </a>
          </li>
          <li>
            <a href="/links" class="text-secondary-400 hover:text-primary-400 text-sm no-underline">
              Useful Links
            </a>
          </li>
        </ul>
      </div>

      <!-- Social & Contact -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="text-white text-lg font-bold mb-4">Connect</h3>
        <div class="flex flex-wrap gap-4 mb-6">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary-400 hover:text-primary-400 transition-colors no-underline"
              aria-label={link.name}
              title={link.name}
            >
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d={link.icon} />
              </svg>
            </a>
          ))}
        </div>
        {profile.email && (
          <p class="text-secondary-400 text-sm">
            <a href={`mailto:${profile.email}`} class="text-primary-400 hover:text-primary-300 no-underline">
              {profile.email}
            </a>
          </p>
        )}
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-secondary-800 mt-8 pt-8 text-center text-secondary-500 text-sm">
      <p>
        Â© {currentYear} {profile.name}. All rights reserved.
      </p>
      <p class="mt-2">
        Built with <a href="https://astro.build" class="text-primary-400 hover:text-primary-300 no-underline">Astro</a>
        and deployed on <a href="https://pages.github.com" class="text-primary-400 hover:text-primary-300 no-underline">GitHub Pages</a>
      </p>
    </div>
  </div>
</footer>
